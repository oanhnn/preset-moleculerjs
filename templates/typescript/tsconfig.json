{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "./**/*",
  ],
  "exclude": [
    "node_modules/**/*",
    "test/**/*",
    "*.config.js",
    "*rc.js"
  ]
}
